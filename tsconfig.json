{
  "compilerOptions": {
    "baseUrl": ".", //paths relative to the project root
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src", //tyscript files location
    "outDir": "./dist", //compiled js files, autogenerated by ts
    "strict": true, //strict type chicking
    "moduleResolution": "Node", //how modules are resolved
    "esModuleInterop": true, //use ES module syntax
    "skipLibCheck": true //skipes type checking all declaration files
  },
  "include": ["./src/**/*.ts"], //files to include in comp
  "exclude": ["node_modules"] //files to exclude from comp
}
